{
  "name": "serverless-navigation-site-tests",
  "version": "1.0.0",
  "description": "Tests for the serverless navigation site",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/js/**/*.js",
      "!src/js/**/*.test.js"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "moduleNameMapping": {
      "\\.(css|less|scss)$": "identity-obj-proxy"
    }
  }
}
